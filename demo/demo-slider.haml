!!!5
%html
  %head
    %title Wi Slider
    %meta(name="viewport" content="width=device-width, user-scalable=no")
    %link(rel="stylesheet" href="../widgets/backgrounds/wi-backgrounds.css" type="text/css" media="screen" title="" charset="utf-8")
    %link(rel="stylesheet" href="../widgets/slider/wi-slider.css" type="text/css" media="screen" title="" charset="utf-8")
    %script(src="../widgets/slider/wi-slider.js" type="text/javascript" charset="utf-8")
    %style
      :plain
        .box { width: 300px; height: 100px; margin: 20px auto; border: 1px solid #777; }
        .wi-slider { margin: 10px auto; width: 200px }
  %body
    .box.wi-striped
      #foo-slider.wi-slider(data-wi-value="70")

  %script
    :plain
      document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('foo-slider').addEventListener('wi-change', function(e) {
          console.log("Slider value changed: " + e.value);
        }, false);
      }, false);